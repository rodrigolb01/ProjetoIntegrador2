@model IEnumerable<Expenses_Manager.Models.PaymentMethod>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>           
            <th>
                @Html.DisplayNameFor(model => model.HolderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiptClosingDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimitValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HolderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptClosingDay.Day)
            </td>
            <td>
                @if(item.Type == Expenses_Manager.Models.Enums.PaymentType.Debit)
                {
                        <span>Receita do mes </span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.LimitValue)
                }
            </td>
            <td>
                @if(item.Type == Expenses_Manager.Models.Enums.PaymentType.Debit)
                {
                    <span> - </span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.CurrentValue)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
