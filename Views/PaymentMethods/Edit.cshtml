@using Expenses_Manager.Models.Enums
@model Expenses_Manager.Models.PaymentMethod

@{
    ViewData["Title"] = "Edit";

    bool isDebit = false;
}

<h1>Edit</h1>

<h4>PaymentMethod</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select id="select" asp-for="Type" asp-items="@Html.GetEnumSelectList<PaymentType>().Where(e => e.Text != PaymentType.Cash.ToString()) " class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HolderName" class="control-label"></label>
                <input asp-for="HolderName" class="form-control" />
                <span asp-validation-for="HolderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flag" class="control-label"></label>
                <input asp-for="Flag" class="form-control" />
                <span asp-validation-for="Flag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityCode" class="control-label"></label>
                <input asp-for="SecurityCode" class="form-control" />
                <span asp-validation-for="SecurityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptClosingDay" class="control-label"></label>
                <input asp-for="ReceiptClosingDay" class="form-control" />
                <span asp-validation-for="ReceiptClosingDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LimitValue" class="control-label"></label>
                @if(isDebit == true)
                {
                    <input asp-for="LimitValue" class="form-control" disabled/>
                }
                else
                {
                    <input asp-for="LimitValue" class="form-control" />
                }
                <span asp-validation-for="LimitValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
