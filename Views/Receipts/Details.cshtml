@using Expenses_Manager.Models.Enums
@model Expenses_Manager.Models.Receipt

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Fatura</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Month)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Month)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PendingPayments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PendingPayments)
        </dd>
    </dl>
    <h3>
        Despezas desta fatura
    </h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Data
                </th>
                <th>
                    Descrição
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Método de pagamento
                </th>
                <th>
                    Status
                </th>
                <th>
                    Parcelas
                </th>
                <th>
                    Categoria
                </th>
                <th></th>
            </tr>
        </thead>
        <div class="row">
            <div class="nav-item">
                 <a asp-controller="Expenses" asp-action="Create">Fazer Lançamento</a>
            </div>
            <div class="nav-item">
                <a asp-area="" asp-controller="Categories" asp-action="Index">Categorias</a>
            </div>
        </div>
        <tbody>
            @foreach (var item in Model.Expenses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentMethodName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Installments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        <a asp-controller="Expenses" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-controller="Expenses" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a asp-controller="Expenses" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <form asp-action="OrdenedDetails" class="row">
            <div class="col">
                 <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="nav-item">
                        <label asp-for="OrderType" class="control-label"></label>
                        <select asp-items="@Html.GetEnumSelectList<OrderType>()" asp-for="OrderType"></select>
                    </div>
                    <div class="nav-item">
                        <label asp-for="FilterType" class="control-label"></label>
                        <select asp-items="@Html.GetEnumSelectList<FilterType>()" asp-for="FilterType"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="FilterValue" class="control-label"></label>
                        <input asp-for="FilterValue" type="text" />
                    </div>
                    <div class="nav-item">
                        <label asp-for="Query" class="control-label"></label>
                        <select asp-items="@Html.GetEnumSelectList<Query>()" asp-for="Query"></select>
                    </div>
                </div>
            </div>          
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <div class="nav-item">
                    <input type="submit" value="Ordenar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>
