@page
@model RegisterModel

<link rel="stylesheet" href="~/css/CustomStyle.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

@{
    ViewData["Title"] = "Cadastrar novo usuário";
}

<div class="main">
    <div class="container loginContainer">
        <div>
            <section>
                <form id="registerForm" class="btn-group-lg" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="loginContainer-helperText-lg">Cadastro de usuário.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <label class="form-label loginContainer-helperText">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label class="form-label loginContainer-helperText">Telefone</label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div>
                        <label class="form-label loginContainer-helperText">Senha</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <label class="form-label loginContainer-helperText">Confirmar senha</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="container loginContainer">
                        <button class="btn btn-primary" style="margin-top: 10px; margin-bottom: 10px" id="registerSubmit" type="submit">Cadastrar</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
