@page
@model AddressModel
@{
    ViewData["Title"] = "Gerenciar endereço";
    ViewData["ActivePage"] = ManageNavPages.Address;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="address-form" method="post">
            <div>
                <label class="form-label">Cidade</label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">Estado</label>
                <input asp-for="Input.State" class="form-control" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">Endereço</label>
                <input asp-for="Input.AddressLine" class="form-control" />
                <span asp-validation-for="Input.AddressLine" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeAddress" class="w-100 btn btn-lg btn-primary">Salvar</button>
        </form>
    </div>
</div>