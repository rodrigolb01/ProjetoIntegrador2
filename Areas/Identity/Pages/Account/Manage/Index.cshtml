@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil do Usuário";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var url = Model.Input.ProfileUrl;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-floating">
                <img class="img-thumbnail" title="img" src="@url" alt="@url" aria-label="@url" />
            </div>
           
            <div class="form-floating">
                <input asp-for="Input.ProfileUrl" class="form-control"  />
                <label class="form-label">Url da foto de perfil</label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.UserName" class="form-control" />
                <label class="form-label">Nome de usuario</label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label class="form-label">Numero de telefone</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Salvar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
